{% block body %}
	<nav class="nav">
		<div class="nav__title">IUT Blog</div>
		<div class="nav__list">
             <button class="button-2"> <a href="/home" id="home">Home</a></button>	
		</div>
	</nav>
    <h1>Commentaire</h1>
<main>
    <aside>
  
        <div class="article">
                <p>Id de l'article {{article.id}}</p>
                <h2> Pseudo : {{article.pseudo}}</h2>
                <article>{{article.description}}</article>  
            <button class="button-6" role="button" id="myBtnCommentaire">Commenter</button>

        </div>
        </aside>
        <section class="commentaire">
    {% for  comm in commentaire %}
        <div class="article" id="comm">
                {# <p>Id du commentaire  {{ comm.id }}</p> #}
                <h2>Pseudo : {{ comm.pseudo }}</h2>
                <article> {{ comm.description }}</article>                          


        </div>
         {% else %}
         <label>
  <input type="checkbox" class="alertCheckbox" autocomplete="off" />
  <div class="alert error">
    {# <span class="alertClose">X</span> #}
    <span class="alertText">Pas de commentaires !</span>
    {# <br class="clear"/></span> #}
  </div>
    </label>
        {% endfor %}
    </section>
    </main>
    {# <a href="{{ path('app_commentaire_index') }}">back to list</a> #}
  <div id="myModalComm" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="closeComm">&times;</span>
